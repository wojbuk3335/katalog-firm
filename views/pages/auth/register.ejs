<h1>Rejestracja</h1>

<form method="POST">

  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input type="email" 
      class="form-control <%- errors?.email ? 'is-invalid' : '' %>" 
      name="email" 
      value="<%- form.email %>"
      id="email"
      required>
    <% if (errors?.email) { %>
      <div class="invalid-feedback"><%= errors.email.message %></div>
    <% } %>
  </div>

  <div class="mb-3">
    <label for="password" class="form-label">HasÅ‚o</label>
    <input type="password" 
      class="form-control <%- errors?.password ? 'is-invalid' : '' %>" 
      name="password"
      id="password"
      required>
    <% if (errors?.password) { %>
      <div class="invalid-feedback"><%= errors.password.message %></div>
    <% } %>
  </div>

  <button class="btn btn-primary">Zarejestruj!</button>
</form>